{# Liste des avenants concernés par cette note de débit #}
<table class="tableau-bordure-zero largeur-max marge-top-petit texte-taille-petit">
    <tr>
        <td colspan="5">Client: <b>{{facture.autreTiers}}</b> </td>
    </tr>
    <tr>
        <td colspan="5">Liste détailée de {{pg_volumeDonnees}} article(s) concernés par la note de débit / facture. [Page {{currentPage}}/{{pg_nb_pages}}]</td>
    </tr>
    <tr>
        <td class="tab-titre-label">N°</td>
        <td class="tab-titre-label" style="width: 100px;">Police</td>
        <td class="tab-titre-label">Avenant</td>
        <td class="tab-titre-label">Risque</td>
        <td class="tab-titre-label" style="width: 100px;">Note</td>
        <td class="tab-titre-valeur">Prime nette</td>
        <td class="tab-titre-valeur">Fronting</td>
        <td class="tab-titre-valeur">Taux</td>
        <td class="tab-titre-valeur">Com (ht)</td>
        <td class="tab-titre-valeur">{{taxe_assureur.nom}}{#  ({{(taxe_assureur.tauxIARD * 100)|number_format(0, ',', '.')}}%)  #}</td>
        <td class="tab-titre-valeur">Total dû</td>
    </tr>
    {# C'est ici qu'il faut mettre la boucle pour parcourir tous les comptes bancaires #}

    {# Les variables à cumuler #}
    {% set x = 1 %}
    {% set y = 0 %}
    {% set pg = 1 %}
    {% set total_fronting = 0 %}
    {% set total_prime_nette = 0 %}
    {% set total_montant = 0 %}
    {% set total_tva = 0 %}
    {% set total_montant_ttc = 0 %}
    {# fin - Les variables à cumuler #}

    {% for i in 0..pg_volumeDonnees %} {# facture.notesElementsFactures|length #} {# pg_tableauMax #} 
            {% if (pg == currentPage) %}
                {% if (x % 2) == 0 %}
                    <tr class="texte-centre">  {# bg-pair #}
                {% else %}
                    <tr class="texte-centre">
                {% endif %}
                    {# Les variables textes #}
                    {% set art_numero = facture.notesElementsFactures["No"]  %}
                    {% set art_reference = facture.notesElementsFactures["Reference_Police"]  %}
                    {% set art_avenant = facture.notesElementsFactures["Avenant"]  %}
                    {% set art_risque = facture.notesElementsFactures["Risque"]  %}
                    {% set art_tranche = facture.notesElementsFactures["Tranche"]  %}
                    {% set art_note = facture.notesElementsFactures["Note"]  %}
                    {% set art_prime_ttc = facture.notesElementsFactures["Prime_TTC"]  %}
                    {% set art_prime_ht = facture.notesElementsFactures["Prime_HT"]  %}
                    {% set art_fronting = facture.notesElementsFactures["Fronting"]  %}
                    {% set art_taxe_assureur = facture.notesElementsFactures["Taxe_Assureur"]  %}
                    {% set art_taux = facture.notesElementsFactures["Taux"]  %}
                    {% set art_montant = facture.notesElementsFactures["Montant"]  %}
                    {% set art_taxes = facture.notesElementsFactures["Taxes"]  %}
                    {% set art_total_du = facture.notesElementsFactures["Total_Dû"]  %}
                    
                    <td class="tab-ligne-valeur" style="width: 25px;">
                        {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_numero, 'txtLimitedLength_tailleMax': 4} %}
                    </td>
                    <td class="tab-ligne-label a-la-ligne-auto" style="width: 170px;">
                        {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_reference, 'txtLimitedLength_tailleMax': 36} %}
                    </td>
                    <td class="tab-ligne-label" style="width: 70px;">
                        {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_avenant, 'txtLimitedLength_tailleMax': 15} %}
                    </td>
                    <td class="tab-ligne-label" style="width: 35px;">
                        {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_risque, 'txtLimitedLength_tailleMax': 4} %}
                    </td>
                    <td class="tab-ligne-label" style="width: 70px;">
                        {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_tranche, 'txtLimitedLength_tailleMax': 15} %}
                    </td>
                    <td class="tab-ligne-label" style="width: 70px;">
                        {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_note, 'txtLimitedLength_tailleMax': 15} %}
                    </td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_prime_ttc|format_currency(monnaie, {fraction_digit: 2})}}</td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_prime_ht|format_currency(monnaie, {fraction_digit: 2})}}</td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_fronting|format_currency(monnaie, {fraction_digit: 2})}}</td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_taxe_assureur|format_currency(monnaie, {fraction_digit: 2})}}</td>
                    <td class="tab-ligne-valeur" style="width: 40px;">{{art_taux|number_format('2', ',', '.')}}%</td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_montant|format_currency(monnaie, {fraction_digit: 2})}}</td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_taxes|format_currency(monnaie, {fraction_digit: 2})}}</td>
                    <td class="tab-ligne-valeur" style="width: 65px;">{{art_total_du|format_currency(monnaie, {fraction_digit: 2})}}</td>
                </tr>
                {% set y = y + 1 %}
            {% endif %}
        {# Ici on incrémente les variables numériques #}
        {% set total_prime_ttc = total_prime_ttc + art_prime_ttc %}
        {% set total_prime_ht = total_prime_ht + art_prime_ht %}
        {% set total_fronting = total_fronting + art_fronting %}
        {% set total_taxe_assureur = total_taxe_assureur + art_taxe_assureur %}
        {% set total_montant = total_montant + art_montant %}
        {% set total_taxes = total_taxes + art_taxes %}
        {% set total_total_du = total_total_du + art_total_du %}
        
        {# S'il atteind le maximum du tableau, il fait un saut à la page suivante #}
        {% if (x % pg_tableauMax) == 0 %}
            {% set pg = pg + 1 %}
        {% endif %}
        {% set x = x + 1 %}
    {% endfor %}
    
    <tr class="bg-sombre">
        <td colspan="6" class = "tab-ligne-label">Total général</td>
        <td class = "tab-ligne-valeur">{{total_prime_ttc|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{total_prime_ht|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{total_fronting|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{total_taxe_assureur|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur"></td>
        <td class = "tab-ligne-valeur">{{total_montant|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{total_taxes|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{total_total_du|format_currency(monnaie, {fraction_digit: 2})}}</td>
    </tr>
</table>
{# On insère le ressort ici pour ajouter ou supprimer les lignes manquantes #}
{% include 'pdf/composants/_ressort.html.twig' with {'tailleTabActuel': y, 'tailleTabMax': pg_tableauMax, 'tailleBoucleMin': 3} %}
