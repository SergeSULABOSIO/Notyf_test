{# Liste des avenants concernés par cette note de débit #}
<table class="tableau-bordure-zero largeur-max marge-top-petit texte-taille-petit">
    <tr>
        <td colspan="12">Liste détailée d'articles ({{pg_volumeDonnees}}) concernés par la note de crédit pour le profit du partenaire {{facture.partenaire.nom}} qui a droit à {{(facture.partenaire.part * 100)|number_format(0, ',', '.')}}% de la commission hors taxes. [Page {{currentPage}}/{{pg_nb_pages}}]</td>
    </tr>
    <tr>
        <td class="tab-titre-valeur">N°</td>
        <td class="tab-titre-label" style="width: 100px;">Police</td>
        <td class="tab-titre-label">Risque</td>
        <td class="tab-titre-label" style="width: 100px;">Client</td>
        <td class="tab-titre-valeur">Prime nette</td>
        <td class="tab-titre-valeur">Com. nette</td>
        <td class="tab-titre-valeur">{{taxe_courtier.nom}}@{{taxe_courtier.taux * 100|number_format(0, ',', '.')}}%</td>
        <td class="tab-titre-valeur">Com. ht.</td>
        <td class="tab-titre-valeur">Part.@{{(facture.partenaire.part * 100)|number_format(0, ',', '.')}}%</td>
        <td class="tab-titre-valeur">Part payé</td>
        <td class="tab-titre-valeur">Solde dû</td>
        <td class="tab-titre-valeur">M. à Payer</td>
    </tr>
    {# C'est ici qu'il faut mettre la boucle pour parcourir tous les comptes bancaires #}

    {# Les variables à cumuler #}
    {% set x = 1 %}
    {% set y = 0 %}
    {% set pg = 1 %}
    {% set tot_prime_nette = 0 %}
    {% set tot_revenu_ht = 0 %} 
    {% set tot_taxes_courtier = 0 %}
    {% set tot_revenu_partageable = 0 %} 
    {% set tot_retrocom = 0 %}
    {% set tot_retrocom_payees = 0 %}
    {% set tot_retrocom_solde = 0 %}
    {% set tot_mont_a_payer = 0 %}
    {# fin - Les variables à cumuler #}
    {% for i in 1..pg_volumeDonnees %} {# pg_tableauMax #}
        {% if (pg == currentPage) %}
            <tr class="texte-centre">
                {# Les variables textes #}
                {% set art_numero = x  %}
                {% set art_reference = facture.elementFactures[i - 1].police.reference %}
                {% set art_code_produit = facture.elementFactures[i - 1].police.produit.code %} 
                {% set art_client = facture.elementFactures[i - 1].police.client.nom %}
                
                {% set art_prime_nette = (facture.elementFactures[i - 1].police.primenette / 100) %}
                {% set art_revenu_ht = (facture.elementFactures[i - 1].police.calc_revenu_ht / 100) %} 
                {% set art_taxes_courtier = (facture.elementFactures[i - 1].police.calc_taxes_courtier / 100) %}
                {% set art_revenu_partageable = (facture.elementFactures[i - 1].police.calc_revenu_partageable / 100) %} 
                {% set art_retrocom = (facture.elementFactures[i - 1].police.calc_retrocom / 100) %}
                {% set art_retrocom_payees = (facture.elementFactures[i - 1].police.calc_retrocom_payees / 100) %}
                {% set art_retrocom_solde = (facture.elementFactures[i - 1].police.calc_retrocom_solde / 100) %}
                {% set art_mont_a_payer = (facture.elementFactures[i - 1].montant / 100) %}
                
                <td class="tab-ligne-valeur" style="width: 25px;">
                    {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_numero, 'txtLimitedLength_tailleMax': 4} %}
                </td>
                <td class="tab-ligne-label a-la-ligne-auto" style="width: 170px;">
                    {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_reference, 'txtLimitedLength_tailleMax': 30} %}
                </td>
                <td class="tab-ligne-label" style="width: 35px;">
                    {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_code_produit, 'txtLimitedLength_tailleMax': 4} %}
                </td>
                <td class="tab-ligne-label a-la-ligne-auto" style="width: 130px;">
                    {% include 'pdf/composants/_txtLimitedLength.html.twig' with {'txtLimitedLength_texte': art_client, 'txtLimitedLength_tailleMax': 28} %}
                </td>
                <td class="tab-ligne-valeur" style="width: 65px;">{{art_prime_nette|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur" style="width: 65px;">{{art_revenu_ht|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur texte-rouge" style="width: 40px;">-{{art_taxes_courtier|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur" style="width: 65px;">{{art_revenu_partageable|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur" style="width: 65px;">{{art_retrocom|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur texte-rouge" style="width: 65px;">-{{art_retrocom_payees|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur" style="width: 65px;">{{art_retrocom_solde|format_currency(monnaie, {fraction_digit: 2})}}</td>
                <td class="tab-ligne-valeur" style="width: 65px;">{{art_mont_a_payer|format_currency(monnaie, {fraction_digit: 2})}}</td>
            </tr>
            {% set y = y + 1 %}
        {% endif %}
        {# Ici on incrémente les variables numériques #}
        {% set tot_prime_nette = tot_prime_nette + art_prime_nette %}
        {% set tot_revenu_ht = tot_revenu_ht + art_revenu_ht %} 
        {% set tot_taxes_courtier = tot_taxes_courtier + art_taxes_courtier %}
        {% set tot_revenu_partageable = tot_revenu_partageable + art_revenu_partageable %} 
        {% set tot_retrocom = tot_retrocom + art_retrocom %}
        {% set tot_retrocom_payees = tot_retrocom_payees + art_retrocom_payees %}
        {% set tot_retrocom_solde = tot_retrocom_solde + art_retrocom_solde %}
        {% set tot_mont_a_payer = tot_mont_a_payer + art_mont_a_payer %}
        {# S'il atteind le maximum du tableau, il fait un saut à la page suivante #}
        {% if (x % pg_tableauMax) == 0 %}
            {% set pg = pg + 1 %}
        {% endif %}
        {% set x = x + 1 %}
    {% endfor %}
    
    <tr class="bg-sombre">
        <td colspan="4" class = "tab-ligne-label">Total général</td>
        <td class = "tab-ligne-valeur">{{tot_prime_nette|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{tot_revenu_ht|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur texte-rouge">-{{tot_taxes_courtier|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{tot_revenu_partageable|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{tot_retrocom|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur texte-rouge">-{{tot_retrocom_payees|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{tot_retrocom_solde|format_currency(monnaie, {fraction_digit: 2})}}</td>
        <td class = "tab-ligne-valeur">{{tot_mont_a_payer|format_currency(monnaie, {fraction_digit: 2})}}</td>
    </tr>
</table>
{# On insère le ressort ici pour ajouter ou supprimer les lignes manquantes #}
{% include 'pdf/composants/_ressort.html.twig' with {'tailleTabActuel': y, 'tailleTabMax': pg_tableauMax, 'tailleBoucleMin': 2} %}
