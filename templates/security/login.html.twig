{% extends 'base.html.twig' %}

{% block title %}JS Brokers - Connexion{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">
            JS Brokers - Connexion
        </h1>
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <div class="">
            <form action="{{path('security.login')}}" method="post">
                <fieldset>
                    <div class="form-group">
                        <label for="username" class="form-label">Addresse mail</label>
                        <input type="email" name="_username" class="form-control" id="email" placeholder="exemple@serveur.com" value="{{ last_username }}">
                        <small id="emailHelp" class="form-text text-muted">Nous ne partagerons pas vos informations personnelles.</small>
                    </div>
                    <div class="form-group">
                        <label for="motdepasse" class="form-label">Mot de passe</label>
                        <input type="password" name="_password" class="form-control" id="motdepasse" placeholder="Mot de passe">
                    </div>
                    <button type="submit" class="btn btn-primary">Connexion</button>
                </fieldset>
            </form>
        </div>
	</div>
{% endblock %}
