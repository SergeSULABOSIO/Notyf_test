<!DOCTYPE html>
<html>
    <head>
        <title>My Webpage</title>
    </head>
    <body>
        {% if field.value is not empty %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Objectif</th>
                        <th scope="col">Client</th>
                        <th scope="col">Etape</th>
                        <th scope="col">Couverture</th>
                        <th scope="col">Potentiel</th>
                        <th scope="col">Réalisation</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% set i = 1 %}
                    {% for piste in field.value %}
                        <tr>
                            <td scope="row">{{ i }}</td>
                            <th>{{piste.nom|raw}}</th>
                            <td>{{piste.objectif|raw}}</td>
                            <td>{{piste.client.nom}}</td>
                            <td>{{piste.nomEtape}}</td>
                            <td>{{piste.produit.nom}}</td>
                            <td>{{(piste.montant / 100)|format_currency(piste.monnaie_Affichage.code)}}</td>
                            <td>{{(piste.realisation / 100)|format_currency(piste.monnaie_Affichage.code)}}</td>
                            <td>{{piste.createdAt|date("d/m/Y")}}</td>
                        </tr>
                        {% set i = i + 1 %}
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <i class="fa-solid fa-face-frown-open"></i> Aucune piste n'est disponible pour l'instant.
        {% endif %}
    </body>
</html>